<%= form_with(model: device, local: true) do |form| %>
  <% if device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
      <% device.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :device_name %>
  </div>

  <div class="field">
    <%= form.label :ip %>
    <%= form.text_field :ip, id: :device_ip %>
  </div>

  <div class="field">
    <%= form.label :mac %>
    <%= form.text_field :mac, id: :device_mac %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :device_description, rows: 10, cols: 60 %>
  </div>

  <div class="field">
    <%= form.label :device_type_id %>
    <%= form.select :device_type_id, DeviceType.order(:name).collect {|p| [p.name, p.id]}, prompt: 'Select a Device Type' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
