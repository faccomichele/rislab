<% cache devices do %>
  <% @devices.each do |device| %>
    <% cache device do %>
      <%= form_tag(line_items_path) do |form| %>
        <%= hidden_field_tag :device_id, device.id %>
        <div class="entry">
          <%-# image_tag(product.image_url) -%>
          <h3><%= device.name %></h3>
          <%= sanitize(device.description) %>
          <div class="type_line">
            <span class="type">
              <%= select_tag :template_volume_id, options_for_select(template_volumes.collect{ |u| [u.name, u.id] }) %>
            </span>
            <%= submit_tag "Add to cart" %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>
