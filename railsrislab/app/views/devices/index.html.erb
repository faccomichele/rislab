<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ip</th>
      <th>Mac</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="list_description">
          <dl>
            <dt><%= device.name %></dt>
            <dd><%= truncate(strip_tags(device.description), length: 80) %></dd>
          </dl>
        </td>
        <td><%= device.ip %></td>
        <td><%= device.mac %></td>
        <td><%= device.type %></td>
        <td class="list_actions">
          <%= link_to 'Show', device %>
          <%= link_to 'Edit', edit_device_path(device) %>
          <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

